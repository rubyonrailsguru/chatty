<div class="col-md-12">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Compose New Message</h3>
    </div>
    <%= form_for @user_email do |f| %>
    <div class="box-body">
      <div class="form-group">
        <%= f.email_field :email,class:"form-control" ,placeholder:"To:"%>
      </div>
      <div class="form-group">
        <%=f.text_field :subject,class:"form-control", placeholder:"Subject:"%>
      </div>
      <div class="form-group">
        <%= f.text_area :body,id:"compose-textarea" ,class:"form-control" ,style:"height: 300px"%>
      </div>
      <div class="form-group">
        <div class="btn btn-default btn-file">
          <i class="fa fa-paperclip"></i> Attachment
          <%=f.file_field :attachment, name:"attachment"%>
        </div>
        <div class="pull-right">
         <%= f.submit "Send" ,class:"btn btn-primary"%>
       </div>
     </div>
   </div>
   <%end%>
 </div>
</div> 
<script>
  $(function () {
    $("#compose-textarea").wysihtml5();
  });
</script>
